        {% for trick in tricks %}
            <div class="col-12 col-md-6 col-lg-3">
                <div class="card mb-4">
                    {% if trick.images | length > 0 %}
                        <a href="{{ path('trick_show', {'slug': trick.slug}) }}"><img class="card-img-top" src="{{ asset('uploads/tricks/' ~ trick.images[0].name) }}" alt="{{ trick.slug }}" style="height:349px;"class="img-responsive"></a>
                    {% else %}  
                        <a href="{{ path('trick_show', {'slug': trick.slug}) }}"><img class="card-img-top" src="{{ asset('IMAGES/no-image.jpg') }}" style="height:349px;" class="img-responsive" alt="...">
                    {% endif %}
                    <div class="card-footer">             
                        {{ trick.name }} 
                        {% if app.user %}
                    <div class=""style="text-align: right;">
                        <a href="{{ path('trick_edit', {'slug': trick.slug}) }}"><i class="fa fa-cog" aria-hidden="true"></i></a>
                        <a href="{{ path('trick_delete', {'slug': trick.slug}) }}" onclick="return confirm(`Confirmez la suppression du trick : {{trick.name}} ?`)"><i class="fa fa-trash" aria-hidden="true"></i></a>
                    </div>
                        {% endif %} 
                    </div> 
            
                </div>
            </div>
        {% endfor %}
