{% extends 'base.html.twig' %}

{% block title %}TrickController!{% endblock %}

{% block body %}

            <div class="row">
                <!-- Blog entries-->
                <div class="col-lg-12">
                    <!-- Featured blog post-->
                    <div class="card mb-4">
                        <a href="#!"><img class="card-img-top" src="/IMAGES/blog-thumb3.jpg" alt="..." stlye="height:350vw; width:850vw; object-fit: cover"/></a>
                        
                    </div>
                    <!-- Nested row for non-featured blog posts-->
                    <div class="row">
                        
                            {% for trick in tricks %}
                            <div class="col-lg-4">
                                <div class="card mb-4">
                                    {% if trick.images | length > 0 %}
                                        <a href="#!"><img class="card-img-top" src="{{ asset('IMAGES/' ~ trick.images[0].name) }}" alt="{{ trick.slug }}" style="height:15vw; object-fit: cover"></a>
                                    {% else %}  
                                        <img class="card-img-top" src="/IMAGES/no-image.jpg"  alt="...">
                                    {% endif %}
                                    <div class="card-body">
                                        <div class="small text-muted">Publié le {{ trick.createdAt|date('d/m/Y H:i') }}</div>
                                        <h2 class="card-title h4">{{ trick.slug }}</h2>
                                        <p class="card-text">{{ trick.description|slice(0, 100) ~ '...' }}</p>
                                        <a class="btn btn-primary" href="#!">Read more →</a>
                                    </div>
                                </div>
                                </div>
                            {% endfor %}       
                        
                    </div>
                    <!-- Pagination-->
                    <nav aria-label="Pagination">
                        <hr class="my-0" />
                        <ul class="pagination justify-content-center my-4">
                            <li class="page-item disabled"><a class="page-link" href="#" tabindex="-1" aria-disabled="true">Newer</a></li>
                            <li class="page-item active" aria-current="page"><a class="page-link" href="#!">1</a></li>
                            <li class="page-item"><a class="page-link" href="#!">2</a></li>
                            <li class="page-item"><a class="page-link" href="#!">3</a></li>
                            <li class="page-item disabled"><a class="page-link" href="#!">...</a></li>
                            <li class="page-item"><a class="page-link" href="#!">15</a></li>
                            <li class="page-item"><a class="page-link" href="#!">Older</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        
{% endblock %}
