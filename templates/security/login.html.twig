{% extends 'base.html.twig' %}

{% block title %}
	Snowtricks - Connexion
{% endblock %}

{% block stylesheets %}
  <link href="{{ asset('css/login.css') }}" rel="stylesheet" />
{% endblock %}
{% block body %}

    <div class="row mt-5">
      <div class="col-lg-10 col-xl-9 mx-auto">
        <div class="card flex-row my-5 border-0 shadow rounded-3 overflow-hidden">
          <div class="card-img-left d-none d-md-flex">
          </div>
          <div class="card-body p-4 p-sm-5">
            <h5 class="card-title text-center mb-5 fw-light fs-5"><b>Connexion</b></h5>
	          {% for message in app.flashes('success') %}
			        <div class="alert alert-success mt-4">
				        {{ message }}
			        </div>
	          {% endfor %}
            <form 
            method="post" novalidate>
             
	          {% if error %}
			        <div class="alert alert-danger mt-4">
				        {{ error.messageKey|trans(error.messageData, 'security') }}
			        </div>
	          {% endif %}
           
                 <div class="form-floating mb-3">
                   
                   
                    <input type="text" required value="{{ last_username }}" name="username" id="floatingInputUsername" class="form-control" placeholder="Nom d'utilisateur" required autofocus>
                    <label for="floatingInputUsername">Entrez votre username</label>
                  </div>
                 
                  <div class="form-floating mb-3">
                    <input type="password" name="password" id="floatingPassword" class="form-control" placeholder="********" required>
                    <label for="floatingPassword">Entrez votre mot de passe</label>
                  </div>
                  <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                  <div class="d-grid mb-2">
                    <button class="btn btn-lg btn-primary btn-login fw-bold text-uppercase" type="submit">Accéder à mon compte</button>
                  </div>
                  <hr class="my-4">
                  <a class="d-block text-center mt-2 small mt-5" href="{{ path('app_register') }}" role="button">Pas de compte? S'inscrire</a>
                  <hr class="my-4">
                  <a class="d-block text-center mt-2 small" href="{{ path('forgot_password') }}" role="button">Mot de passe oublié?</a>
                    </div>
                  </div>
            </form>
          </div>
        </div>
      </div>
    </div>	
{% endblock %}


