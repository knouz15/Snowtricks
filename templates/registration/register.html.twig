{% extends 'base.html.twig' %}

{% block title %}
    Snowtricks - Inscription
{% endblock %} 

{% block stylesheets %}
  <link href="{{ asset('css/register.css') }}" rel="stylesheet" />
{% endblock %}
{% block body %}
  {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
  {% endfor %}
   
  <div class="row mt-5 mb-5">
    <div class="col-lg-10 col-xl-9 mx-auto">
      <div class="card flex-row my-5 border-0 shadow rounded-3 overflow-hidden">
        <div class="card-img-left d-none d-md-flex">
        </div> 
        <div class="card-body p-4 p-sm-5">
          <h5 class="card-title text-center mb-5 fw-light fs-5"><b>Inscription</b></h5>
          {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}})}}
            {% for message in app.flashes('success') %}
			        <div class="alert alert-success mt-4">
                <div class="flash-notice">
				          {{ message }}
			          </div>
              </div>
	          {% endfor %}
             
            <div class="my-custom-class-for-errors">
              {{ form_errors(registrationForm) }}
   
              <div class="form-floating mb-3">
                  
                {{ form_row(registrationForm.username)}}
              </div>
               
              <div class="form-floating mb-3">
				    
                {{ form_row(registrationForm.email)}}
              </div>
             
              <div class="form-floating mb-3">
                    
                {{ form_row(registrationForm.plainPassword)}}
              </div>

              <div class="form-check mb-3">
                   
                {{ form_row(registrationForm.agreeTerms)}}
              </div>
              
              <div class="d-grid mb-2">
                <button class="btn btn-lg btn-primary btn-register fw-bold text-uppercase" href="{{ path('app_login') }}" type="submit">Créer mon compte</button>
              </div>
            </div>
          {{ form_end(registrationForm)}}
          <hr class="my-4">
          <a class="d-block text-center mt-2 small" href="{{ path('app_login') }}" role="button">Déjà membre? Se connecter</a>   
        </div>
      </div>
    </div>
  </div>

{% endblock %}


