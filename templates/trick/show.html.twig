{% extends "base.html.twig" %}

{# {% block title trick.name %}
{% endblock %}   #}
	
{% block body %}

<div class="container" 
  <h1 class="my-4">{{ trick.name }}</h1>  
  <div class="row">
    <div class="col-md-8">
      {% if trick.images | length > 0 %}
        <img class="img-fluid" src=""{{ asset('images/trick/' ~ trick.images[0].name) }}"" alt="">
      {% else %}  
        <img class="card-img-top" src="/IMAGES/no-image.jpg"  alt="...">
      {% endif %}  
    </div>
  
    <div class="col-md-4">
      <h3 class="my-3">Description du trick</h3>
      <p>{{ trick.description | raw }}.</p>
      <h3 class="my-3">Details du trick</h3>
      <ul>
        <li>Publié le {{ trick.createdAt|date('d/m/Y') }}</li>
        <li>Mis à jour le {{ trick.updatedAt |date('d/m/Y') }}</li>
        <li>Catégorie: {{ trick.category.slug }}</li>
      </ul>
    </div>
  
  </div>
    <!-- /.row -->
  <h3 class="my-4">Les Medias</h3>
  <div class="row">
      {% if trick.images | length > 0 %}
        {% for image in trick.images %}
          <div class="col-md-3 col-sm-6 mb-4">
            <img class="img-fluid" src="{{ asset('images/trick/') ~image.name}}" alt=""> 
          </div>
        {% endfor %}
        {% else %}
          <div class="col-md-3 col-sm-6 mb-4">
            <img class="card-img-top" src="/IMAGES/no-image.jpg"  alt="...">
          </div>  
    {% endif %}
      
    
      {% if trick.tags | length > 0 %}
        {% for tag in trick.tags %}
          <div class="col-md-3 col-sm-6 mb-4">
            {{ tag.name | raw}}
          </div>
        {% endfor %}
        {% else %}
          <div class="col-md-3 col-sm-6 mb-4">
            <img class="card-img-top" src="/IMAGES/no-video.jpg"  alt="...">
          </div> 
      {% endif %} 
    </div>
  </div>
</div>
{% endblock %} 




